{% block main %}

    <section class="articles-container">

        <article class="article-container">

            <form action="{{ path('update_article',{id: article.id}) }}" method="POST">
                <div>
                    <label for="title">Titre de l'article :</label>
                    <input id="title" type="text" name="title" value="{{ article.title }}" required>
                </div>
                <div>
                    <label for="content">Contenu de l'article :</label>
                    <textarea id="content" name="content" required>{{ article.content}}</textarea>
                </div>
                <div>
                    <label for="image">Image :</label>
                    <input type="text" id="image" name="image" value="{{ article.image }}">
                </div>
                <button type="submit">Modifier l'article</button>
            </form>
        </article>

    </section>

{% endblock main %}