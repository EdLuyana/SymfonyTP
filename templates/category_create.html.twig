{% extends 'base.html.twig' %}

{% block metatitle %}
    Creation de catégorie
{% endblock metatitle %}

{% block main %}

    <section class="articles-container">

        <article class="article-container">
            <form action="{{ path('category_create') }}" method="POST">
                <div>
                    <label for="title">Titre de la catégorie :</label>
                    <input id="title" type="text" name="title" placeholder="Entrez le titre de la catégorie" required>
                </div>
                <div>
                    <label for="color">Couleur de la catégorie:</label>
                    <input name="color" type="color" required>
                </div>
                <button type="submit">Créer la Categori</button>
            </form>
        </article>

    </section>

{% endblock main %}